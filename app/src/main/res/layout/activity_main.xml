<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/aguacate"
    android:padding="16dp">

    <!-- Botones de Usuarios y Plagas -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnUsuario"
            android:layout_width="0dp"
            android:layout_height="264dp"
            android:layout_weight="1"
            android:background="@drawable/borde"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/usuario" />

        <ImageView
            android:id="@+id/btnplagas"
            android:layout_width="0dp"
            android:layout_height="264dp"
            android:layout_weight="1"
            android:background="@drawable/borde"
            app:srcCompat="@drawable/plagas" />
    </LinearLayout>

    <!-- Botones de Planilla y Gr치ficas -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnplanilla"
            android:layout_width="0dp"
            android:layout_height="264dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:background="@drawable/borde"
            app:srcCompat="@drawable/planilla" />

        <ImageView
            android:id="@+id/btngraficas"
            android:layout_width="0dp"
            android:layout_height="264dp"
            android:layout_weight="1"
            android:background="@drawable/borde"
            app:srcCompat="@drawable/grafica" />
    </LinearLayout>

    <!-- Bot칩n de Cerrar Sesi칩n -->
    <Button
        android:id="@+id/btnCerrarSesion"
        android:textColor="#000000"
        android:backgroundTint="#AEE56F"
        android:textSize="34sp"
        android:layout_width="380dp"
        android:layout_height="81dp"
        android:layout_marginTop="16dp"
        android:text="Cerrar Sesi칩n" />
</LinearLayout>

